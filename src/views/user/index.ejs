<%- include('shared/header') %>
  <div class="container">
    <div class="welcome-section">
      <h1>Welcome Back!</h1>
      <p>Adventure into Code: Learn, Build, and Succeed with CodeVenture.</p>
    </div>
    <div class="login-container">
      <%- include('../shared/partials/alert') %>
      <div class="login-content">

        <form class="login-form" action="/loginAccount" method="post" aria-label="Login Form">
          <h2>Login</h2>
          <div class="input-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
          </div>
          <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
          <!-- <a class="btn btn-success" href="/auth/google">Log In using Google</a> -->
          <p class="signup-link">
            Don't have an account? <a href="/register">Sign Up</a>
          </p>
        </form>
      </div>
    </div>
  </div>
  <style>
    .container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
  </style>
  <%- include('shared/footer') %>