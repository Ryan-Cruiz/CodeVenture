<%- include('shared/header') %>
    < <div class="container mt-1">
        <h2>Settings</h2>
        <form action="" method="post">
            <p class="fs-5">Database</p>
            <div class="mb-3">
                <label for="host" class="form-label">Host</label>
                <input type="text" name="host" autocomplete="off" class="form-control" id="host" placeholder="localhost"
                    value="<%= config.host %>">
            </div>
            <div class="mb-3">
                <label for="user" class="form-label">Database User</label>
                <input type="text" name="user" autocomplete="off" class="form-control" id="user" placeholder="root"
                    value="<%= config.user %>">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Database Password</label>
                <input type="password" name="db_password" autocomplete="off" class="form-control" id="password"
                    placeholder="root" value="<%= config.password %>">
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Database Name</label>
                <input type="text" name="name" autocomplete="off" class="form-control" id="name"
                    placeholder="databasename" value="<%= config.database %>">
            </div>
            <div class="mb-3">
                <label for="port" class="form-label">Port</label>
                <input type="text" name="port" autocomplete="off" class="form-control" id="port" placeholder="3306"
                    value="<%= config.port %>">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="text" name="password" autocomplete="off" class="form-control" id="password">
            </div>
            <input type="submit" value="Save" class="btn btn-primary">
        </form>
        </div>

        <%- include('shared/footer') %>